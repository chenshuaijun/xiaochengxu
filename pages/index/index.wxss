.userinfo {
  position: absolute;
  margin-top: 10px;
  border: 2px solid gainsboro;
  background-color: ghostwhite;
  border-radius: 10%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 10%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 15px;
}

.doubleBallButton {
  position:absolute;
  margin-top: 15px;
  right: 20px;
  width: 36px;
  height: 36px;
}

.doubleBallButton image {
  width: 36px;
  height: 36px;
}
